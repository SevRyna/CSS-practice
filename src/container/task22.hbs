{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
{{#with page_header}}
<h1 class="text-center">{{title}}</h1>
<p class="text-center">{{description}}</p>
{{!-- початок виводимо всі дані з page_header.section --}}
{{/with}}
<div class="card">
    <div class="card-body">
        {{#with section.about_us}}
        <p class="text-end display-6 ">{{title_list.main}}</p>
        <h2 class="text-end ">{{title_list.sub}}</h2>
        <button type="button" class="btn btn-outline-info btn-lg">{{button.text}}</button>
        {{/with}}
    </div>
</div>
<br>
<hr>
<div class="card">
    <div class="card-body">

        {{#with section.advantage}}
        <p class="display-5">{{title}}</h1>
        <div class="card">
            <div class="card-body">
                {{#with efficiency}}
                <p class="display-4">{{title}}</p>
                <h6>{{sub_title}}</h6>
                <p>{{description}}</p>
                <button type="button" class="btn btn-outline-warning btn-lg">{{button}}</button>
                {{/with}}
            </div>
        </div>
        <br>
        <div class="card">
            <div class="card-body">

                {{#with innovation}}
                <p class="display-4 text-center">{{title}}</p>
                <h6 class="text-center">{{sub_title}}</h2>
                    <p class="text-center">{{description}}</p>
                    <button type="button" class="btn btn-outline-warning btn-lg">{{button}}</button>
                    {{/with}}
            </div>
        </div>
        <br>
        <div class="card">
            <div class="card-body">

                {{#with collaboration}}
                <p class="display-4 text-end">{{title}}</p>
                <h6 class="text-end">{{sub_title}}</h2>
                    <p class="text-end ">{{description}}</p>
                    <button type="button" class="btn btn-outline-warning btn-lg">{{button}}</button>
                    {{/with}}
            </div>
        </div>
        {{/with}}
    </div>
</div>
<br>
<hr>
<div class="card">
    <div class="card-body">

        {{#with section.agreement}}
        <p class="display-5">{{title}}</h1>
        <div class="card">
            <div class="card-body">
                {{#with info}}
                <h5 class="display-4">{{sub_title}}</h5>
                <div class="card">
                    <div class="card-body">
                        <p>{{detail.text}}</p>
                        <button type="button" class="btn btn-success btn-lg">{{detail.button}}</button>
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
        {{/with}}
    </div>
</div>
</main>



