{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}

<header class="header">
    <a href="# test">
        {{> logo}}
    </a>

    <nav1 class="header_nav1">
        <div class="header_nav1_right">
            {{>nav1 list=header}}
        </div>
    </nav1>
</header>

{{#with hero}}
<div class="hero">
    <div class="hero_content">
        <h1 class="hero_title">{{title}}</h1>
        <p class="hero_text">{{text}}</p>
    </div>
    <div class="hero_slider">
        <div class="hero_slider_icon hero_slider_left">{{left}}</div>
        <img src="{{photo}}" alt="hero image" class="hero_image">
        <div class="hero_slider_icon hero_slider_right">{{right}}</div>
    </div>
</div>
{{/with}}

<div class="modal">
    {{hero.text}} {{hero.text}}
    {{!--<img src="{{hero.photo}}" alt="hero image" class="hero_image">--}}
    {{hero.text}} {{hero.text}}
</div>

<main class="blog">
    {{#each blog}}
    {{>cardblog data=this}}
    {{/each}}
</main>
{{#with form}}
<div class="form">
    <div class="form_content">
        <h3 class="form_title">{{title}}</h3>
        <p class="form_info">{{info}}</p>
    </div>
    <div class="form_action">
        <a class="button form_button" href="{{href}}">{{button}}</a>

    </div>
</div>
{{/with}}


<footer class="footer" id"test">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav1 list=links isVertical=true}}
    </div>
    {{/each}}
</footer>