{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main>
    {{#with navigation}}
    <div class="card mb-5">
        <div class="row">
            <div class="col-4">
                <div class="display-6 ms-2 mb-2">
                    {{Logo}}
                </div>
            </div>

            <div class="col-8">
                <ul class="nav justify-content -end">
                    {{#each links}}
                    <li class="nav-item mt-2">
                        <a href="{{href}}" {{#unless @last}} class="nav-link" {{else}} class="nav-link disabled"
                            {{/unless}}>
                            {{text}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    {{/with}}


    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                {{#if url}}
                <li class="breadcrumb-item">
                    <a href="{{url}}">{{name}}</a>
                </li>
                {{else}}
                <li class="breadcrumb-item active" aria-current="page">{{name}}</li>
                {{/if}}
                {{/each}}
            </ol>
        </nav>
    </div>
    <div class="row ">
        <div class="col-12 ">
            {{#with newsData}}
            <div class="card">
                <img src="{{photo}}" class="card-img-top" />
                <div class="card-body">
                    {{#with head}}
                    <h5 class="card-title">{{heading}}</h5>
                    <p class="card-text">{{description}}</p>
                    {{/with}}
                    {{#each body}}
                    <p>{{title}}</p>
                    <p>{{text}}</p>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>

    {{#with newsOtherBlock}}
    <h2>{{title}}</h2>
    <div class="row g-3">
        {{#each cards}}
        <div class="col-3 g-3">
            <div class="card">
                <div class="card-body">
                    <img src="https://picsum.photos/400/200" class="card-img-top" alt="" />
                    <h5>
                        <span class="text-bg-secondary ">{{title}}</span>
                        <span class="bg text text-bg-info badge rounded-pill">{{idNew}}</span>
                        <span class="bg text text-bg-warning badge rounded-pill">{{isTop}}</span>
                    </h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
    </div>
    {{#with service}}
    <div class="card">
        <div class="card-body text-bg-success">
            <div class="col-12">
                <h2 class="text-center">{{title}}</h2>
                <p class="text-center">{{description}}</p>
                {{#each buttons}}
                <div class="d-grid gap-2 col-3 mx-auto">
                    <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}
    <br>

    <hr class"my-5">
    <footer>
        <div class="row g-5">
            {{#each footer}}
            <div class="nav col-2">
                <div>
                    {{#each this}}
                    <div>
                        <a class="nav nav-link{{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
    </footer>






</main>





