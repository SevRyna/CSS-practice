{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main>
    <div>
        <div class="card">
            <div class="row">
                <div class="col-12">

                    <div class="p-2 bg-success-subtle text-emphasis-success">
                        <h5 class="pt-5">LOGO</h5>
                        <section>
                            <ul class="nav justify-content-end">
                                <li class=" nav-item">
                                    <a class="nav-link active" aria-current="page" href="https://github.com/">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="https://www.google.com/">Contacts</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="https://www.youtube.com/">Help</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link disabled">Logo</a>
                                </li>
                            </ul>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                {{#if url}}
                <li class="breadcrumb-item">
                    <a href="{{url}}">{{name}}</a>
                </li>
                {{else}}
                <li class="breadcrumb-item active" aria-current="page">{{name}}</li>
                {{/if}}
                {{/each}}
            </ol>
        </nav>
    </div>
    <div class="row ">
        <div class="col-12 ">
            {{#with newsData}}
            <div class="card">
                <img src="{{photo}}" class="card-img-top" />
                <div class="card-body">
                    {{#with head}}
                    <h5 class="card-title">{{heading}}</h5>
                    <p class="card-text">{{description}}</p>
                    {{/with}}
                    {{#each body}}
                    <div>{{title}}</div>
                    <div>{{text}}</div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>

    {{#with newsOtherBlock}}
    <h2>{{title}}</h2>
    <div class="row g-3">
        {{#each cards}}
        <div class="col-3 g-3">
            <div class="card">
                <div class="card-body">
                    <img src="https://picsum.photos/400/200" class="card-img-top" alt="" />
                    <h5>
                        <span class="text-bg-secondary ">{{title}}</span>
                        <span class="bg text text-bg-info badge rounded-pill">{{idNew}}</span>
                        <span class="bg text text-bg-warning badge rounded-pill">{{isTop}}</span>
                    </h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
    </div>
    {{#with service}}
    <div class="card">
        <div class="card-body text-bg-success">
            <div class="col-12">
                <h2 class="text-center">{{title}}</h2>
                <p class="text-center">{{description}}</p>
                {{#each buttons}}
                <div class="d-grid gap-2 col-3 mx-auto">
                    <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}
    <br>

    <hr class"my-5">
    <footer>
        <div class="row g-5">
            {{#each footer}}
            <div class="nav col-2">
                <div>
                    {{#each this}}
                    <div>
                        <a class="nav nav-link{{#if last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
    </footer>






</main>





