{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
    <h1>{{name}}</h1>
</div>

<br />

{{#with address}}
<div>
    <address>
        {{street}},
        {{city}},
        {{state}},
        {{zip}},
        {{country}}
    </address>
</div>
{{/with}}

<hr />
</div>

<div>
    {{> title data='Education' }}
    {{#each education}}
    <div>
        <strong>{{degree}} | {{major}} | {{university}}</strong>
    </div>
    {{/each}}

    <br />
    <hr />
    <section>
        {{> title data='Work Experience' }}
        {{#each workExperience}}
        <div>
            <em>{{title}} | {{company}}</em>

            <br />
            <hr />
            <div>
                {{> title data='Responsibilities' }}
                <ul>
                    {{#each responsibilities}} <li>{{name}}</li>
                    <li>{{isName}}</li>
                    {{/each}}
                </ul>
            </div>
            <div>
                <h4>Projects</h4>
                <ul>
                    {{#each Employees}}
                    <li>{{name}}</li>
                    <li>{{technologies}}</li>
                    <li></li>
                    {{/each}}
                </ul>
            </div>

        </div>
        {{/each}}
    </section>
</div>
{{/with}}

