{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}
<div class="page">
    <div class="page-content">
        <div class="page_block">
            <header class="header">
                <div class="">
                    {{> logo}}
                </div>

                <nav1 class="header_nav1">
                    <div class="header_nav1_right">
                        {{>nav1 list=header}}
                    </div>
                </nav1>
            </header>
        </div>
    </div>
</div>

<div class="page_block">
    <div class="hero">
        {{#with hero}}
        {{>hero title=title text=text}}
        <a class="button" href="{{button.url}}">{{button.text}}</a>
        {{/with}}
    </div>
</div>

<div class="page_block">
    <div class="flex-container">
        {{#each preview}}
        {{> cardPreview class="flex-item" data=this}}
        {{/each}}
    </div>
</div>

<div class="page_block">
    <main class="main">
        <div class="row g-0">
            <div class="col-12">
                <div class="list_header">
                    <div>
                        <h2 class="list_title">List of posts</h2>
                    </div>
                    <div>
                        <div class="category_list">
                            {{#each categories}}
                            <button class="category_button">{{text}}</button>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-7">
                <div class="list">
                    {{#each news}}
                    {{> cardPost data=this}}
                    {{/each}}
                </div>
            </div>
            <div class="col-5">
                <aside class="list_aside">
                    <div class="about">
                        <h4 class="about_title">About</h4>
                        <p class="about_text">{{about}}</p>
                    </div>
                    {{> linkList data=archive title="Arhives"}}
                    {{> linkList data=social title="Social"}}
                </aside>
            </div>
        </div>
    </main>
</div>

<div class="page_block">
    <footer class="footer">
        <div>
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
        </div>
        {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{>nav1 list=links isVertical=true}}
        </div>
        {{/each}}
    </footer>
</div>