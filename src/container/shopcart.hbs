{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<main>
    {{#with navigation}}
    <div class="col-12">
        <ul class="nav justify-content">
            {{#each links}}
            <li class="nav-item mt-2">
                <a href="{{href}}" {{#unless @last}} class="nav-link" {{else}} class="nav-link disabled" {{/unless}}>
                    {{text}}
                </a>
            </li>
            {{/each}}
        </ul>
    </div>
    </div>
    </div>
    {{/with}}
    <hr>
    <div class="row">
        <p class="h1">{{header.title}}</p>
        <div class="col-6">
            <button type="button" class="btn btn-outline-secondary">Продовжити покупки</button>
        </div>
    </div>
    <br>

    <hr>
    <div class="row">

        {{#each goodsBlock}}
        <div class="col-md-2"> <img src="{{image}}" alt="img"></div>
        <div class="col-md-4">
            <span style="font-size:150%;">{{name}}</span>
            <br>
            {{description}}
        </div>
        <div class="col-md-2">
            {{price.title}}: <br> {{price.value}}
        </div>
        <div class="col-md-1">
            {{amount}}
        </div>
        <div class="col-md-3">
            {{#each buttons}}
            {{#if isPrimary}} <button type=" button" class="btn btn-primary">{{text}}</button> {{/if}}
            {{#if isDanger}}<button type="button" class="btn btn-outline-danger">{{text}}</button> {{/if}}
            <br><br>
            {{/each}}
        </div>
        {{/each}}
    </div>
    <hr>
    <div class="row">

        {{#with total}}
        <header>
            <section>
                {{> title data=total.title}}
                <div>
                    <h1>{{title}}</h1>
                    <h3>{{amount}}</h3>
                    <p>{{delivery}}</p>
                </div>
            </section>
        </header>
        {{#each buttons}}
        <ol class="nav nav-item">
            {{#if isSuccess}}
            <li class="nav-link"><input class="btn btn-success" type="https://www.youtube.com" value="{{text}}">
            </li>
            {{/if}}
            {{#if isOutline}}
            <li class="nav-link"><input class="btn btn-outline-success" type="https://www.youtube.com" value="{{text}}">
            </li>
            {{/if}}
        </ol>
        {{/each}}
        {{/with}}
    </div>
    </div>
    <hr>
    {{#with goodsOtherBlock}}
    <div class="row g-4">
        <h2>{{title}}</h2>
        {{#each cards}} <div class="col-4 g-4">
            <div class="card">

                <div class="card-body">
                    <img src="https://picsum.photos/400/200" class="card-img-top" alt="iPhone 13" />
                    <h5>
                        <span class="text-bg-secondary ">{{title}}</span>
                        <span class="bg text text-bg-info badge rounded-pill">{{idNew}}</span>
                        <span class="bg text text-bg-warning badge rounded-pill">{{isHot}}</span>
                    </h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
    <hr>
    {{#with subscribe}}
    <div class="card">
        <div class="card-body text-bg-dark">
            <div class=col-12>
                <ul class="nav nav-pills">
                    <li class="col-7 ms-5">
                        <h2>{{header}}</h2>
                        <p class="mb-0">{{description}}</p>
                    </li>
                    {{#each buttons}}
                    <li class="col-7 ms-5">
                        <a class="btn btn-primary" href="{{link}}" role="button">{{text}}</a>
                    </li>
                    <br><br>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    {{/with}}
    <hr>

    <div class"my-5">
        <footer>
            <div class="row g-5">
                {{#each footer}}
                <div class="nav col-2">
                    <div>
                        {{#each this}}
                        <div>
                            <a class="nav nav-link{{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            </div>
        </footer>

</main>